<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
  <div class="main__form open__form__animation">
    <fest:for iterate="data.buttons" index="i" value="button">
      <div class="main__form-button">
        <div class="main__form-button__background">
          <a class="main__form-button__text">
            <fest:value>button.text</fest:value>
          </a>
        </div>
      </div>
    </fest:for>
  </div>
</fest:template>
