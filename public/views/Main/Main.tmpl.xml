<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
  <div class="main">
    <div class="main__wrapper">
      <div class="main__header">
        SOUL HUNTING
      </div>
      <div class="main__form">
        <fest:for iterate="data.buttons" index="i" value="button">
          <a>
            <fest:attributes>
              <fest:attribute name="class">
                main__form__button
              </fest:attribute>
              <fest:attribute name="data-nav">
                <fest:value>button.action</fest:value>
              </fest:attribute>
            </fest:attributes>
            <fest:value>button.text</fest:value>
          </a>
        </fest:for>
        <a>
          <fest:attributes>
            <fest:attribute name="class">
              main__form__button main__form__button-logout
            </fest:attribute>
            <fest:attribute name="name">
              logout
            </fest:attribute>
          </fest:attributes>
          Logout
        </a>
      </div>
    </div>
  </div>
</fest:template>
